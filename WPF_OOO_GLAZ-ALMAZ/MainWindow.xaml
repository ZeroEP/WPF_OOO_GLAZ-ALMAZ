<Window x:Class="WPF_OOO_GLAZ_ALMAZ.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_OOO_GLAZ_ALMAZ"
        mc:Ignorable="d"
        Title="OOO Глаз Алмаз" Height="450" Width="800"
        Background="#FF9BD1E5">
    <Window.Resources>
        
    </Window.Resources>
    <Grid MinHeight="450" MinWidth="800">
        <Image Source="/Static/Logo.png" />
            <StackPanel VerticalAlignment="Center">
            <TextBlock Text="Введите логин" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic"  > </TextBlock>
            <TextBox x:Name="login_tb" Background="#3E6680"></TextBox>
            <Label Content="Введите пароль" FontStretch="Expanded" FontStyle="Italic"  HorizontalAlignment="Center"></Label>
            <PasswordBox x:Name="password_tb" Background="#3E6680" ></PasswordBox>
            <Button FontStyle="Italic"  Name="submitbut" Content="Авторизоваться" Click="Auth_click" FontFamily="TimesNewRoman" Margin="15" > </Button>
        </StackPanel>
    </Grid>
</Window>
